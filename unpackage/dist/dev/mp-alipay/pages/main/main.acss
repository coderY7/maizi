page {
  background: url(/static/main/dt.png) no-repeat;
  background-size: contain;
  background-color: #f3f2f4;
}
#content {
  margin: 180rpx 40rpx 0 40rpx;
}
#name {
  margin-left: 10rpx;
  font-size: 20px;
  border-left: 10rpx solid #feb121;
  padding-left: 20rpx;
  margin: 30rpx 0 30rpx 20rpx;
}
.unit1 {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 320rpx;
  background: url(/static/main/dk.png) no-repeat;
  margin: 0 auto;
  background-size: 100%;
  width: calc(100% - 14rpx);
}
.unit1 image {
  width: 30%;
  margin-left: 20rpx;
}
.unit1 .unit1_text {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 100rpx;
}
.unit1 .unit1_text .name {
  margin: 20 rpx 0;
  font-size: 25px;
}
.unit2 {
  display: flex;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.unit2 .unit2Nav {
  display: flex;
  width: 100%;
}
.unit2 .unit2Nav .unit2_box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.unit2 .unit2Nav .unit2_box .unit2_img1 {
  width: 66rpx;
  height: 88rpx;
  margin-bottom: 20rpx;
}
.unit2 .unit2Nav .unit2_box .unit2_img2 {
  width: 96rpx;
  height: 76rpx;
  margin-bottom: 20rpx;
}
.unit2 .unit2Nav .unit2_box .unit2_img3 {
  width: 79rpx;
  height: 79rpx;
  margin-bottom: 20rpx;
}
.unit3 {
  display: flex;
}
.unit3 .unit3Nav {
  display: flex;
  width: 100%;
  justify-content: space-around;
  border: 2rpx  #ccc;
  border-radius: 40rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  background-color: #ffffff;
  margin: 0 20rpx;
}
.unit3 .unit3Nav .unit3_box {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.unit3 .unit3Nav .unit3_box .unit3_img {
  width: 180rpx;
  height: 180rpx;
}
.unit3 .unit3Nav .unit3_box .unit3_name {
  font-size: 20px;
}
.unit3 .unit3Nav .unit3_box .unit3_min {
  padding-top: 10rpx;
  opacity: 0.6;
}
.unit4 {
  position: relative;
  width: calc(100% - 40rpx);
  height: 260rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  border-radius: 40rpx;
}
.unit4 image {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
  overflow: hidden;
}
.unit4 .unit4_text {
  color: #fff;
  font-size: large;
  width: 100%;
  height: 100rpx;
  font-size: 18px;
  position: absolute;
  bottom: 0;
  background: #000;
  opacity: 0.6;
  border-radius: 0 0 40rpx 40rpx;
  padding: 20rpx 0 20rpx 20rpx;
}

