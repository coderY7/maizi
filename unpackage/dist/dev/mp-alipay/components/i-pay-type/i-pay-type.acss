.i-pay-type .i-pay-item,
.i-pay-type .i-pay-item .i-pay-item-right,
.i-pay-type .i-pay-item .i-pay-item-left {
  display: flex;
  align-items: center;
}
.i-pay-type .i-pay-item {
  box-sizing: border-box;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  border: #fff 0.5px solid;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}
.i-pay-type .i-pay-item .i-pay-item-left {
  padding-left: 5rpx;
}
.i-pay-type .i-pay-item .i-pay-item-left image {
  width: 40rpx;
  height: 40rpx;
}
.i-pay-type .i-pay-item .i-pay-item-left text {
  padding-left: 20rpx;
  font-size: 34rpx;
}

